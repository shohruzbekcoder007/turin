doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon" href="#")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css' integrity='sha512-8bHTC73gkZ7rZ7vpqUQThUDhqcNFyYi2xgDgPDHc+GXVGHXq+xPjynxIopALmOPqzo9JZj0k6OqqewdGO3EsrQ==' crossorigin='anonymous' referrerpolicy='no-referrer')
        link(rel='stylesheet' href='/css/basic.css')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        script(src='https://unpkg.com/axios/dist/axios.min.js')
        title Location
    body 
        include includes/header.pug
        .ui.bottom.attached.segment
            include includes/sidebar.pug
            .pusher
                .ui.basic.segment
                    .container(ng-app='myApp', ng-controller='namesCtrl').crud-table
                        .clearfix
                            .form-inline.pull-left
                                button.btn.btn-success#newlocation
                                    span.glyphicon.glyphicon-plus 
                                    | Add new location
                        table.table.table-striped
                            thead
                                tr
                                    th(ng-click="orderBy('name')") name
                                    th(ng-click="orderBy('country')") building
                                    th(ng-click="orderBy('email')") floor
                                    th(ng-click="orderBy('email')") createdAt
                                    th(ng-click="orderBy('email')") updatedAt
                                    th
                                    th
                            tbody.text-center#locationbody
                        section.dn#createlocation
                            .container
                                .row.justify-content-center
                                .col-12.col-md-8.col-lg-8.col-xl-6
                                    .row
                                    .col.text-center.title
                                        h1 Create New Location
                                    .row.align-items-center
                                        .col.mt-4
                                            input.form-control(type='text', id='name' placeholder='name')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='number', id='building' placeholder='building')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='number', id='floor' placeholder='floor')
                                    .row.justify-content-start.mt-4
                                        .col
                                            button.btn.btn-primary.mt-4#createlocationbtn Create
                        section.dn#updatelocation
                            .container
                                .row.justify-content-center
                                .col-12.col-md-8.col-lg-8.col-xl-6
                                    .row
                                    .col.text-center.title
                                        h1 Update Location
                                    .row.align-items-center
                                        .col.mt-4
                                            input.form-control(type='text', id='updatename' placeholder='name')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='text', id='updatebuilding' placeholder='building')
                                    .row.align-items-center.mt-4
                                        .col
                                            input.form-control(type='email', id='updatefloor' placeholder='floor')
                                    .row.justify-content-start.mt-4
                                        .col
                                            button.btn.btn-primary.mt-4#updatelocationbtn Update
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js', integrity='sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==', crossorigin='anonymous', referrerpolicy='no-referrer')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js')
        script(src='/js/main.js')
        script(src='/js/location/location.js')